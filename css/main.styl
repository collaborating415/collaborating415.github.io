@import 'nib'
@import 'normalize'
@import 'rem-polyfill'
@import 'grid-builder'
@import 'embed-containers'

// Common media queries
mw19 = "only screen and (min-width: 19em)"
mw25 = "only screen and (min-width: 25em)"
mw32 = "only screen and (min-width: 32em)"
mw38 = "only screen and (min-width: 38em)"
mw44 = "only screen and (min-width: 44em)"
mw60 = "only screen and (min-width: 60em)"
mw85 = "only screen and (min-width: 85em)"
mw115 = "only screen and (min-width: 115em)"

units("s", 5)

@media only screen and (min-width: 38em)
  units("m", 5, true)

@media only screen and (min-width: 60em)
  units("l", 5, true)

html
  height 100%
  margin 0
  position relative

  font normal 100%/1.4 sans-serif

  @media mw38
    font-size 110%

  @media mw60
    font-size 120%

  @media mw85
    font-size 130%

  @media mw115
    font-size 140%

body
  min-height 100%
  margin 0
  overflow-x hidden
  padding 0
  position relative

  border-bottom 8px solid #999
  border-top 8px solid #999

  color #333

::-moz-selection
  background odb-red

  color #fff
  text-shadow none

::selection
  background odb-red

  color #fff
  text-shadow none

h1
  margin 1em 0 0.8em

  color #fff
  font-size 1.5rem
  line-height 1.3

h2
  margin 0 0 1em

  color #000
  font-size 1.125rem
  line-height 1.5

p
  margin 0 0 1.5em
  padding 0

a
a:link
a:visited
  border-bottom 0.1em solid rgba(#00f, 0.3)

  color odb-red
  text-decoration none

a:hover
a:focus
a:active
  border-color rgba(#33f, 1)

a:focus
  outline 2px solid #000

.grid
  text-align center

.unit
  text-align left

.unit-spacer
  padding 0 8px

.flex-img
  display block
  width 100%

.masthead
  position relative

.blurb
  margin 0
  padding 1em

  background-color #ccc

  text-align center
  text-shadow 0 1px 3px rgba(0,0,0,0.5)

  @media mw38
    bottom 0
    left 50%
    margin-left -10em
    position absolute
    width 20em

    background-color transparent

.bio
  margin-top 1.4em

.bio__name
  margin 0

  font-size 1.125rem

.bio__title
  font-style italic
  font-weight normal

.bio__desc

  @media mw38
    font-size 0.875rem

  @media mw60
    font-size 0.75rem

.bio__btn
  cursor pointer

.bio__extra
  max-height 100em
  overflow hidden

  transition max-height 350ms linear

.js .bio__extra[data-state="collapsed"]
  max-height 0

.bio__btn
  display none

.js .bio__btn
  display block
