@import 'nib'
@import 'normalize'
@import 'rem-polyfill'
@import 'grid-builder'
@import 'embed-containers'

// Common media queries
mw19 = "only screen and (min-width: 19em)"
mw25 = "only screen and (min-width: 25em)"
mw32 = "only screen and (min-width: 32em)"
mw38 = "only screen and (min-width: 38em)"
mw44 = "only screen and (min-width: 44em)"
mw60 = "only screen and (min-width: 60em)"
mw85 = "only screen and (min-width: 85em)"
mw115 = "only screen and (min-width: 115em)"

units("s", 5)

@media only screen and (min-width: 38em)
  units("m", 5, true)

@media only screen and (min-width: 60em)
  units("l", 5, true)

html
  height 100%
  margin 0
  position relative

  @media mw38
    font-size 110%

  @media mw60
    font-size 120%

  @media mw85
    font-size 130%

  @media mw115
    font-size 140%

body
  min-height 100%
  margin 0
  overflow-x hidden
  padding 0
  position relative

  color #333

::-moz-selection
  background odb-red

  color #fff
  text-shadow none

::selection
  background odb-red

  color #fff
  text-shadow none

h1
  margin 1em 0 0.8em

  color #fff
  font-size 1.5rem
  line-height 1.3

h2
  color #000
  font-size 1.125rem
  line-height 1.5

a
a:link
a:visited
  border-bottom 0.1em solid rgba(#00f, 0.3)

  color odb-red
  text-decoration none

a:hover
a:focus
a:active
  border-color rgba(#33f, 1)

a:focus
  outline 2px solid #000
